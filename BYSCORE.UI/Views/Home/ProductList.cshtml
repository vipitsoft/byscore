
@{
    Layout = "_Layout1";
    ViewData["Title"] = "Home Page";
}

<!-- bootstrap datepicker -->
<link rel="stylesheet" href="~/lib/bower-components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Data Tables
            <small>advanced tables</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">产品列表</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="panel panel-default">
                            <div class="panel-heading">查询条件<span class="panel-icon"></span></div>
                            <div class="panel-body">
                                <form id="formSearch" class="form-horizontal">
                                    <div class="form-group" style="margin-top:15px">
                                        <label class="control-label col-sm-1" for="Name">产品名称</label>
                                        <div class="col-sm-3">
                                            <input type="text" class="form-control" name="Name" id="Name">
                                        </div>
                                        <label class="control-label col-sm-1" for="AddTime">日期</label>
                                        <div class="col-sm-3">
                                            <div class="input-group date">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                <input type="text" name="AddTime" class="form-control pull-right " id="datepicker">
                                            </div>
                                        </div>
                                        <div class="col-sm-4" style="text-align:left;">
                                            <button type="button" style="margin-left:50px" id="btn_query" class="btn btn-primary" onclick="Search()">查询</button>
                                            <button type="button" style="margin-left:10px" id="btn_query" class="btn btn-warning" onclick="SearchReset()">重置</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div id="toolbar" class="btn-group">
                            <a id="btn_add" href="/home/productadd" class="btn btn-default">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
                            </a>
                            <a id="btn_excel" href="/home/ExportExcel" target="_blank" class="btn btn-default">
                                <i class="fa fa-save"></i>导出Excel
                            </a>
                        </div>

                        <table id="ArbetTable"></table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

@section Scripts{
    <!-- bootstrap datepicker -->
    <script src="~/lib/bower-components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <link href="~/lib/toastr/toastr.css" rel="stylesheet" />
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/toastrconfig.js"></script>
    <script src="~/lib/confirm/confirm.js"></script>
    <script src="~/js/site.js"></script>
    <script>
         //Date picker
    $('#datepicker').datepicker({
        autoclose: true,
        format: 'yyyy-mm-dd'
    })
        function productFormatter(value, row, index) {//赋予的参数
            return [
                '<a class="btn btn-lg" href="/home/productedit?id='+row.id+'"><i class = "fa fa-edit"></i></a>',
                '<a class="btn btn-lg" href="javascript:;"  onclick="DelProduct('+row.id+')"><i class = "fa fa-trash-o"></i></a>'
            ].join('');
        }
        $(function () {
     //1.初始化Table
     var dataconfig = {
         tableid:"#ArbetTable", //table的Id
         url: "/home/GetProductList", //获取列表的url
         columns: [
            {checkbox: true},
            {
                field: 'id',
                title: '序号'
            }, {
                field: 'name',
                title: '产品名'
            }, {
                field: 'description',
                title: '产品介绍'
            },
            {
                field: 'price',
                title: '产品价格'
            },
            {
                field: 'discout',
                title: '折扣'
            },
            {
                field: 'addTime',
                title: '日期',
                formatter: dateFormatter //自定义方法，格式化日期
            },
            {
                field: 'operate',
                title: '操作',
                formatter: productFormatter //自定义方法，添加操作按钮
            },
            ]
     };
     var oTable = new TableInit(dataconfig);
     oTable.Init();
 });

        function DelProduct(id) {
        Ewin.confirm({ message: "确认要删除选择的数据吗？" }).on(function (e) {
                if (!e) {
                    return;
                }
                $.ajax({
                    type: "get",
                    url: "/home/DelProduct",
                    data: { "id": id },
                    dataType: "json",
                    success: function (data) {
                        if (data.isdel == true) {
                            toastr.success('删除成功！');
                            $("#ArbetTable").bootstrapTable('refresh');
                        }else{
                            toastr.error('删除失败！');
                        }
                    },
                    error: function () {
                        toastr.error('删除失败！');
                    },
                    complete: function () {

                    }

                });
            });
        };



    </script>
}