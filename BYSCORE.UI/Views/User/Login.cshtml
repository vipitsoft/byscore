@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>登录</title>

    <link href="~/css/login-index.css" rel="stylesheet" />
    <style>
        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 50px;
            left: 50px;
            color: white;
        }

        .navbar {
            margin-top: -20px;
        }

        .nav.pull-right {
            float: right;
            list-style: none;
            margin-right: 14.5%;
        }

        ul {
            display: block;
            list-style-type: disc;
        }

        li {
            float: left;
            line-height: 20px;
            padding-left: 20px;
        }

        a {
            text-decoration: none;
            color: white;
        }
    </style>
</head>
<body>
    <div class="bg1"></div>
    <div class="gyl">
        管理系统
    </div>
    <div class="bg">
        <form action="/user/login" method="post">
            <div class="wel">用户登录</div>
            <div class="user">
                <div id="yonghu" style="">用户名</div>
                <input type="text" name="UserName" class="form-control" placeholder="用户名、邮箱">
            </div>
            <div class="password">
                <div id="yonghu">密&nbsp;&nbsp;&nbsp;码</div>
                <input type="password" name="Password" class="form-control" placeholder="密码">
            </div>
            <div class="rem">
                <label style="color:red">@ViewBag.Errormessage</label>
            </div>
            <div class="fg">
                <!--<div style="font-size: 11px;margin-top: 11px;">
                    <a style="font-size: 11px;" href="#">忘记密码？</a>
                </div>-->
            </div>
            <input class="btn" type="submit" name="登录" value="登录" />
        </form>

    </div>
    <div class="footer">
        © 2019 xxx Corporation All Rights Reserved
        <div class="navbar">
            <ul class="nav pull-right">
                <li>

                </li>

                <li></li>

            </ul>
        </div>
    </div>
</body>
</html>
